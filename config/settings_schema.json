  {
    "name": "Charles Bubble",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "checkbox",
        "id": "c_bubble_enabled",
        "label": "Enable bubble",
        "default": false,
        "info": "Globally show or hide the bubble"
      },
      {
        "type": "select",
        "id": "c_bubble_position",
        "label": "Bubble position",
        "options": [
          {
            "value": "c-bubble-left",
            "label": "Left"
          },
          {
            "value": "c-bubble-right",
            "label": "Right"
          }
        ],
        "default": "c-bubble-right"
      },
      {
        "type": "color",
        "id": "c_bubble_bg",
        "label": "Bubble Background",
        "default": "#ffffff"
      },
      {
        "type": "image_picker",
        "id": "c_bubble_logo",
        "label": "Bubble logo image"
      },
      {
        "type": "range",
        "id": "c_bubble_size",
        "min": 1,
        "max": 10,
        "step": 0.5,
        "unit": "rem",
        "label": "Bubble size",
        "default": 4
      },
      {
        "type": "header",
        "content": "Speech bubble"
      },
      {
        "type": "color",
        "id": "c_bubble_speech_bubble_bg",
        "label": "Speech bubble background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "c_bubble_speech_bubble_text_color",
        "label": "Speech bubble text color",
        "default": "#221F20"
      },
      {
        "type": "header",
        "content": "Push speech bubble"
      },
      {
        "type": "text",
        "id": "c_bubble_speech_bubble_push_text",
        "label": "Push Bubble Text",
        "info": "Text shown within the push bubble that automatically opens",
        "default": "Hey! You look great again",
        "placeholder": "Hey! You look great again"
      },
      {
        "type": "range",
        "id": "c_bubble_speech_bubble_push_timer",
        "min": 0,
        "max": 20,
        "step": 0.5,
        "unit": "sec",
        "label": "Push bubble timer",
        "default": 1.5,
        "info": "Automatically opens the push bubble after this time, if the user has not clicked on the bubble yet."
      },
      {
        "type": "range",
        "id": "c_bubble_speech_bubble_push_close_timer",
        "min": 0,
        "max": 20,
        "step": 0.5,
        "unit": "sec",
        "label": "Push bubble close timer",
        "default": 5,
        "info": "Automatically closes the push bubble after this time."
      },
      {
        "type": "header",
        "content": "Pull speech bubble"
      },
      {
        "type": "text",
        "id": "c_bubble_speech_bubble_pull_text",
        "label": "Pull Bubble Text",
        "info": "Text shown within the pull bubble",
        "default": "Now itâ€™s time for your first order via WhatsApp"
      },
      {
        "type": "text",
        "id": "c_bubble_speech_bubble_pull_button_label",
        "label": "Pull Bubble Button Label",
        "default": "Order now!"
      },
      {
        "type": "url",
        "id": "c_bubble_speech_bubble_pull_button_action",
        "label": "Pull Bubble Action URL",
        "info": "Enter the url that will open when the user clicks on the pull bubble CTA"
      },
      {
        "type": "color",
        "id": "c_bubble_speech_bubble_pull_button_bg",
        "label": "Pull Bubble CTA Background",
        "default": "#00C40A"
      },
      {
        "type": "color",
        "id": "c_bubble_speech_bubble_pull_button_text_color",
        "label": "Pull Bubble CTA Text Color",
        "default": "#ffffff"
      }
    ]
