<body class="template-password">

  <main role="main" id="MainContent">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-6" style="display: none">
          <div>
            {{ content_for_layout }}
          </div>
        </div>
        <div class="col-sm-6" style="text-align: center;background: #f5f5f5; padding: 30px;">
          <div id="Login">
            <h2>{{ 'general.password_page.login_form_heading' | t }}</h2>
            {% form 'storefront_password' %}
              {{ form.errors | default_errors }}
              <input type="password"
                name="password"
                id="Password"
                placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}" style="border: 1px solid #ccc;">
              <button class="btn btn-primary" type="submit" name="commit">
                {{ 'general.password_page.login_form_submit' | t }}
              </button>
            {% endform %}
            <p>{{ 'general.password_page.admin_link_html' | t }}</p>
          </div>
        </div>
      </div>
    </div>
  </main>

