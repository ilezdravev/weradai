<div class="container my-4 my-lg-5">
    <div class="row">
        <div class="col-12 text-center">
            {% if section.settings.cta_text != blank %}
                <a href="{{ section.settings.cta_url }}" class="btn btn-primary">{{ section.settings.cta_text }}</a>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "DNA CTA",
    "settings": [
        {
            "type": "text",
            "id": "cta_text",
            "label": "Text"
        },
        {
            "type": "url",
            "id": "cta_url",
            "label": "URL"
        }
    ]
  }
{% endschema %}