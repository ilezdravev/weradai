{% render 'section-settings', section: section %}

<div class="container section-padding" {{ block.shopify_attributes }}>
    <div class="row justify-content-center">
      <div class="col-sm-12">
          <div class="testimonial-logos-container" data-logo-slider>
            {% for block in section.blocks %}
                <div class="testimonials-thumb">
                <img loading="lazy" class="lazyload" height="auto" width="{{ block.settings.logo.width }}" src="{{ block.settings.logo | img_url: 'master' }}" />
                </div>
            {% endfor %}
          </div>
      </div>
    </div>
  </div>

  {% schema %}
    {
      "name": "Logos",
      "max_blocks": 6,
      "settings": [
        {
          "type": "range",
          "id": "ptop",
          "min": 0,
          "max": 100,
          "unit": "px",
          "default": 40,
          "step": 10,
          "label": "Padding Top"
        },
        {
            "type": "range",
            "id": "pbottom",
            "min": 0,
            "max": 100,
            "unit": "px",
            "default": 40,
            "step": 10,
            "label": "Padding Bottom"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color"
        }
      ],
      "blocks": [
        {
          "type": "text",
          "name": "Logos",
          "settings": [
            {
              "type": "image_picker",
              "id": "logo",
              "label": "Logo"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Logos",
          "category": "Content"
        }
      ]
    }
  {% endschema %}
