{% render 'section-settings', section: section %}

<div class="custom-reviews container">
  <div class="title">{{ section.settings.title }}</div>
  <div class='slide-container'>
    <button class="slide-btn slide-left"><img src="{{"left.png" | asset_url }}"/></button>
    <div class="review-items">
      {% for block in section.blocks %}
        <div class="review-item">
          <div class="stars">
            <img src="{{ 'star.png' | asset_url }}">
            <img src="{{ 'star.png' | asset_url }}">
            <img src="{{ 'star.png' | asset_url }}">
            <img src="{{ 'star.png' | asset_url }}">
            <img src="{{ 'star.png' | asset_url }}">
          </div>
          <div class="review-title">{{ block.settings.title }}</div>
          <div class="review-content">{{ block.settings.content }}</div>
          <div class="review-author">-{{ block.settings.author }}</div>
        </div>
      {% endfor %}
    </div>
    <button class="slide-btn slide-right"><img src="{{"right.png" | asset_url }}"/></button>
  </div>
  
</div>

{% schema %}
  {
    "name": "Custom Reviews",
    "settings": [
      {
          "type": "range",
          "id": "ptop",
          "min": 0,
          "max": 100,
          "unit": "px",
          "default": 40,
          "step": 10,
          "label": "Padding Top"
      },
      {
          "type": "range",
          "id": "pbottom",
          "min": 0,
          "max": 100,
          "unit": "px",
          "default": 40,
          "step": 10,
          "label": "Padding Bottom"
      },
      {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Reviews"
      }
    ]
  }
{% endschema %}