{% assign content_page = section.settings.size_guide_page %}

<a href="#size-guide" class="cd-popup-trigger size-guide-button">
	{% if shop.domain == 'us.daiwear.com' %}
		<span>US size</span>
	{% else %}
		<span>UK size</span>
	{% endif %}
<span>guide</span>
</a>
{% unless shop.domain == 'us.daiwear.com' %}
	{% if section.settings.wa_enable %}
		<a href="{{ section.settings.wa_link }}%20{{ product.title | replace: " ", "%20" }}" class="whatsapp" target="_blank"><img src="{{ section.settings.wa_icon | img_url: '50x' }}" alt=""><span>{{ section.settings.wa_text }}</span></a>
	{% endif %}
{% endunless %}

<div class="cd-popup" role="alert" id="size-guide">
	<div class="cd-popup-container">
		<div class="popup-content">
			{{ pages[content_page].content }}
		</div>

		<a href="#size-guide" class="cd-popup-close img-replace">Close</a>
	</div> <!-- cd-popup-container -->
</div> <!-- cd-popup -->
