          <a href="mailto:experience@daiwear.com?subject=Stylist%20Fit%20Assistance" class="btn btn-primary">Email us</a>
        </div>
      </div>
      <div class="col-sm-6 col-xl-3">
        {% comment %} Call {% endcomment %}
        <div class="option-box">
          {% render 'icon-call' %}
          <p class="tpfilter-item__subtitle mt-0">+44 7501 383648</p>
          <a href="tel:447501383648" class="btn btn-primary">Call us</a>
        </div>
      </div>
      <div class="col-sm-6 col-xl-3">
        {% comment %} Visit {% endcomment %}
        <div class="option-box">
          {% render 'icon-location' %}
          <p class="tpfilter-item__subtitle mt-0">Dai Showroom</p>
          <a href="/pages/contact-us" class="btn btn-primary">Visit us</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
